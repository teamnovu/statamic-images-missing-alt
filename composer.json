{
    "name": "teamnovu/statamic-images-missing-alt",
    "description": "Addon to list all images with no alt text on your Statamic dashboard.",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Teamnovu\\StatamicImagesMissingAlt\\": "src"
        }
    },
    "authors": [
        {
            "name": "Tom Diggelmann"
        }
    ],
    "support": {
        "email": "developers@novu.ch"
    },
    "extra": {
        "statamic": {
            "name": "Statamic Images Missing Alt",
            "description": "Addon to list all images with no alt text on your Statamic dashboard."
        },
        "laravel": {
            "providers": [
                "Teamnovu\\StatamicImagesMissingAlt\\ServiceProvider"
            ]
        }
    },
    "require": {
        "statamic/cms": "^4.0 || ^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
        ]
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}